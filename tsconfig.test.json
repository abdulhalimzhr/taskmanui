{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "tests/**/*",
    "jest.setup.ts",
    "jest.config.ts",
    "types/**/*"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}